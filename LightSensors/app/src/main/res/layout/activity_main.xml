<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:screenOrientation="portrait">

    <RelativeLayout android:id="@+id/RelativeLayout01"
                    android:background="@color/orange"
                    android:layout_width="fill_parent" android:layout_height="fill_parent">

        <Button android:id="@+id/reservationButton"
                android:background="@color/green"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="200sp"
                android:layout_height="70dp" android:text="Zajmij"
                android:layout_centerInParent="true"></Button>
        <TextView
                android:text="Toaleta jest przez kogoś zarezerwowana. Prosimy uszanować kolejkę i skorzystać z aplikacji bądź poczekać aż wszyscy zapisani skorzystają"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/infoText"/>
        <ImageButton
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_height="match_parent" app:srcCompat="@drawable/doit"
                android:id="@+id/doItImage"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>