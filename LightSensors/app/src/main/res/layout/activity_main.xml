<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:screenOrientation="portrait">

    <RelativeLayout android:id="@+id/RelativeLayout01"
                    android:background="@color/orange"
                    android:layout_width="fill_parent" android:layout_height="fill_parent">

        <Button android:id="@+id/reservationButton"
                android:background="@color/green"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="200sp"
                android:layout_height="70dp" android:text="Zajmij"
                android:layout_centerInParent="true"></Button>
        <TextView
                android:text="Toaleta jest przez kogoś zarezerwowana. Prosimy uszanować kolejkę i skorzystać z aplikacji bądź poczekać aż wszyscy zapisani skorzystają"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:layout_height="wrap_content" android:id="@+id/infoText"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Name"
                android:id="@+id/queue_info" android:layout_marginTop="66dp" android:layout_below="@+id/infoText"
                android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/infoText"/>
        <Button
                android:background="@color/green"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="200sp"
                android:layout_height="70dp"
                android:layout_centerInParent="true" android:text="Zrezygnuj" android:id="@+id/buttonResignation"
                android:layout_centerHorizontal="true" android:layout_marginTop="-359dp"
                android:layout_below="@+id/queue_info"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>